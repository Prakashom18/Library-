<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".first_sem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="1st Semester Books"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </TextView>

        <Button
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:hint="C programming"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </Button>

        <Button
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Physics"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </Button>

        <Button
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Introduction to Information Technology"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </Button>

        <Button
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Mathematics I"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </Button>

        <Button
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Digital Logic"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="30sp"
            tools:ignore="HardcodedText">

        </Button>


    </LinearLayout>


</RelativeLayout>